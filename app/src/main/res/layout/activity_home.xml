<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.diagnosis.diagnosis.Home"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diagnosis (Form)"
        android:id="@+id/a"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:onClick="diagnosis" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explaination"
        android:id="@+id/b"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:onClick="explain" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="comm with Dr"
        android:id="@+id/c"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:onClick="comm" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="assign treatment session"
        android:id="@+id/d"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:onClick="assign" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="set alert"
        android:id="@+id/f"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:onClick="alert" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nearby Hospitals"
        android:id="@+id/g"
        android:layout_marginTop="10dp"
        android:onClick="map" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="previous diagnosis"
        android:id="@+id/e"
        android:layout_marginTop="10dp"
        android:onClick="provide" />

</LinearLayout>
