<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.diagnosis.diagnosis.Home"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/health2"
        android:id="@+id/imageView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnosis (Form)"
                android:id="@+id/a"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:onClick="diagnosis"
                android:background="@drawable/selectable_background" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="comm with Dr"
                android:id="@+id/c"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:onClick="comm"
                android:background="@drawable/selectable_background" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="assign treatment session"
                android:id="@+id/d"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:onClick="assign"
                android:background="@drawable/selectable_background" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="set alert"
                android:id="@+id/f"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:onClick="alert"
                android:background="@drawable/selectable_background" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nearby Hospitals"
                android:id="@+id/g"
                android:layout_marginTop="10dp"
                android:onClick="map"
                android:background="@drawable/selectable_background" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="previous diagnosis"
                android:id="@+id/e"
                android:layout_marginTop="10dp"
                android:onClick="provide"
                android:background="@drawable/selectable_background" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical Advices"
                android:id="@+id/button7"
                android:layout_marginTop="10dp"
                android:onClick="advices"
                android:background="@drawable/selectable_background" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
